{
	"name": "codefast",
	"displayName": "CodeFast Copilot - Local Commit Buddy",
	"description": "Generate commit messages using local AI models through Ollama",
	"version": "0.0.1",
	"publisher": "codefastdev",
	"license": "MIT",
	"author": {
		"name": "Sudeepta Sarkar",
		"email": "sudsarkar13@gmail.com",
		"url": "https://github.com/sudsarkar13"
	},
	"engines": {
		"vscode": "^1.60.0",
		"node": "^14.x.x"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:codefast.generateCommitMessage"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codefast.generateCommitMessage",
				"title": "Generate Commit Message"
			}
		],
		"configuration": {
			"title": "CodeFast",
			"properties": {
				"codefast.aiModel": {
					"type": "string",
					"default": "codellama",
					"description": "Select the AI model to use"
				},
				"codefast.useEmojis": {
					"type": "boolean",
					"default": true,
					"description": "Enable or disable emoji incorporation"
				},
				"codefast.customPrompt": {
					"type": "string",
					"default": "",
					"description": "Set a custom prompt for the AI model"
				},
				"codefast.emojiMapping": {
					"type": "object",
					"default": {
						"feat": "âœ¨",
						"fix": "ğŸ›",
						"docs": "ğŸ“š",
						"style": "ğŸ’",
						"refactor": "ğŸ“¦",
						"test": "ğŸš¨",
						"chore": "ğŸ”§"
					},
					"description": "Custom emoji mapping for commit message prefixes"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint .",
		"test": "node ./out/test/runTest.js",
		"coverage": "nyc npm run test",
		"build": "npm run compile"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^14.x.x",
		"@types/sinon": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^4.33.0",
		"@typescript-eslint/parser": "^4.33.0",
		"eslint": "^7.32.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"nyc": "^15.1.0",
		"sinon": "^11.1.2",
		"typescript": "^4.3.5",
		"vscode": "^1.1.37",
		"@vscode/test-electron": "^1.6.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/sudsarkar13/codefast-copilot-local-commit-buddy.git"
	}
}
