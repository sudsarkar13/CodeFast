{
	"name": "codefast",
	"displayName": "CodeFast Copilot - Local Commit Buddy",
	"description": "Generate commit messages using local AI models through Ollama",
	"version": "0.0.1",
	"license": "MIT",
	"author": {
		"name": "Sudeepta Sarkar",
		"email": "sudsarkar13@gmail.com",
		"url": "https://github.com/sudsarkar13"
	},
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:codefast.generateCommitMessage"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codefast.generateCommitMessage",
				"title": "Generate Commit Message"
			}
		],
		"configuration": {
			"title": "CodeFast",
			"properties": {
				"codefast.aiModel": {
					"type": "string",
					"default": "codellama",
					"description": "Select the AI model to use"
				},
				"codefast.useEmojis": {
					"type": "boolean",
					"default": true,
					"description": "Enable or disable emoji incorporation"
				},
				"codefast.customPrompt": {
					"type": "string",
					"default": "",
					"description": "Set a custom prompt for the AI model"
				},
				"codefast.emojiMapping": {
					"type": "object",
					"default": {
						"feat": "✨",
						"fix": "🐛",
						"docs": "📚",
						"style": "💎",
						"refactor": "📦",
						"test": "🚨",
						"chore": "🔧"
					},
					"description": "Custom emoji mapping for commit message prefixes"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "node ./out/test/runTest.js",
		"build": "npm run compile"
	},
	"devDependencies": {
		"@eslint/js": "^9.10.0",
		"@types/node": "^14.x.x",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"child_process": "^1.0.2",
		"eslint": "^8.57.0",
		"eslint-plugin-react": "^7.35.2",
		"globals": "^15.9.0",
		"http": "^0.0.1-security",
		"typescript": "^4.9.5",
		"typescript-eslint": "^8.4.0",
		"vscode": "^1.1.37",
		"vscode-test": "^1.6.1",
		"@vscode/test-electron": "^2.3.8"
	},
	"packageManager": "yarn@4.4.1"
}
