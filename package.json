{
	"name": "codefast",
	"displayName": "CodeFast Copilot - Local Commit Buddy",
	"description": "Generate commit messages using local AI models through Ollama",
	"version": "0.0.1",
	"license": "MIT",
	"author": {
		"name": "Sudeepta Sarkar",
		"email": "sudsarkar13@gmail.com",
		"url": "https://github.com/sudsarkar13"
	},
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:codefast.generateCommitMessage"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "codefast.generateCommitMessage",
				"title": "Generate Commit Message"
			}
		],
		"configuration": {
			"title": "CodeFast",
			"properties": {
				"codefast.aiModel": {
					"type": "string",
					"default": "codellama",
					"description": "Select the AI model to use"
				},
				"codefast.commitBuddy.useEmojis": {
					"type": "boolean",
					"default": true,
					"description": "Enable or disable emoji incorporation"
				},
				"codefast.commitBuddy.customPrompt": {
					"type": "string",
					"default": "",
					"description": "Set a custom prompt for the AI model"
				},
				"codefast.commitBuddy.emojiMapping": {
					"type": "object",
					"default": {
						"feat": "✨",
						"fix": "🐛",
						"docs": "📚",
						"style": "💎",
						"refactor": "📦",
						"test": "🚨",
						"chore": "🔧"
					},
					"description": "Custom emoji mapping for commit message prefixes"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/node": "^14.x.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.18.0",
		"typescript": "^4.7.4",
		"vscode-test": "^1.6.1"
	},
	"packageManager": "yarn@4.4.1"
}
