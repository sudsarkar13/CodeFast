{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "types": ["node"]
  },
  "exclude": ["node_modules", ".vscode-test"],
  "include": [
    "src/**/*",
    "src/test/**/*"
  ]
}